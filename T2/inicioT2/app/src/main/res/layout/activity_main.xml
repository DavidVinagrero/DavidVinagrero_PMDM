<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddinGeneral"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        android:layout_gravity="center"
        android:textSize="@dimen/texto_grande"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:textAlignment="center"
        android:textSize="@dimen/texto_medio"
        android:id="@+id/texto_saludo"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="@string/botonPulsar"
            android:layout_gravity="center"
            android:textSize="@dimen/texto_pequenio"
            android:layout_marginRight="10dp"
            android:id="@+id/boton_inicial"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/texto_pasar"
            android:layout_gravity="center"
            android:textSize="@dimen/texto_pequenio"
            android:id="@+id/boton_pasar"
            />
    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:hint="@string/hint_nombre"
        android:inputType="text"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:drawablePadding="20dp"
        android:id="@+id/edit_nombre"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginTop"
        android:src="@drawable/meh"
        android:scaleType="center"
        android:id="@+id/imagen_estado"
    />
</LinearLayout>
