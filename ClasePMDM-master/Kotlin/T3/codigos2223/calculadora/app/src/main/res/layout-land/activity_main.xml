<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_numeros"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/boton_tres"
            android:backgroundTint="@color/gris_science"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/boton_cuatro"
            android:backgroundTint="@color/gris_science"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/boton_uno"
            android:backgroundTint="@color/verde_operacion"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/boton_dos"
            android:backgroundTint="@color/verde_operacion"
            />




    </LinearLayout>



</LinearLayout>