<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1+1"
                android:id="@+id/etiqueta_operacion"
                android:gravity="right|bottom"
                android:textSize="@dimen/operacion"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="23"
                android:id="@+id/etiqueta_resultado"
                android:gravity="right|bottom"
                android:textSize="@dimen/resultado"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.1">

            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.50">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="C"
                    android:id="@+id/boton_limpiar"
                    android:textSize="@dimen/numeros"/>

            </LinearLayout>

            <!-- Columna 2 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text=""
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="/"
                    android:id="@+id/boton_dividir"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="1"
                    android:id="@+id/boton_uno"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="2"
                    android:id="@+id/boton_dos"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="3"
                    android:id="@+id/boton_tres"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="+"
                    android:id="@+id/boton_sumar"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">


            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="4"
                    android:id="@+id/boton_cuatro"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="5"
                    android:id="@+id/boton_cinco"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="6"
                    android:id="@+id/boton_seis"
                    android:textSize="@dimen/numeros"/>

            </LinearLayout>

            <!-- Columna 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="-"
                    android:id="@+id/boton_restar"
                    android:textSize="@dimen/numeros"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Fila 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">


            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="7"
                    android:id="@+id/boton_siete"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="8"
                    android:id="@+id/boton_ocho"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="9"
                    android:id="@+id/boton_nueve"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="x"
                    android:id="@+id/boton_multiplicar"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Fila 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">


            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.50">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="0"
                    android:id="@+id/boton_cero"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:text="."
                    android:id="@+id/boton_coma"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>

            <!-- Columna 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.25">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_orange_dark"
                    android:text="="
                    android:id="@+id/boton_igual"
                    android:textSize="@dimen/numeros"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>