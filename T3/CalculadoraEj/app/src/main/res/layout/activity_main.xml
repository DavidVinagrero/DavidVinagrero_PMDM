<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/etiqueta_operacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|bottom"
                android:text="1+1"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/etiqueta_resultado"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="right|center"
                android:text="2"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_limpiar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:backgroundTint="@color/teal_700"
                android:layout_weight=".50"
                android:text="AC"
                android:textColor="@android:color/black"
                android:textSize="@dimen/botones_vertical" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:backgroundTint="@color/teal_700"
                android:layout_weight=".25"
                android:text="%"
                android:id="@+id/boton_porcentaje"
                android:textSize="@dimen/botones_vertical"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:backgroundTint="@color/teal_700"
                android:text="รท"
                android:id="@+id/boton_dividir"
                android:textSize="@dimen/botones_vertical"
                android:layout_weight=".25" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="9"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_nueve"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="8"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_ocho"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="7"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_siete"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="+"
                android:backgroundTint="@color/teal_700"
                android:layout_margin="2dp"
                android:id="@+id/boton_sumar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="6"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_seis"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="5"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_cinco"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="4"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_cuatro"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="x"
                android:backgroundTint="@color/teal_700"
                android:layout_margin="2dp"
                android:id="@+id/boton_multiplicar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.10">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="3"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_tres"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="2"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_dos"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="1"
                android:backgroundTint="@color/gris"
                android:layout_margin="2dp"
                android:id="@+id/boton_uno"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:textSize="@dimen/botones_vertical"
                android:text="-"
                android:backgroundTint="@color/teal_700"
                android:layout_margin="2dp"
                android:id="@+id/boton_restar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.10">
            <Button
                android:id="@+id/boton_cero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".50"
                android:text="0"
                android:backgroundTint="@color/gris"
                android:textSize="@dimen/botones_vertical" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight=".25"
                android:text="."
                android:id="@+id/boton_coma"
                android:backgroundTint="@color/teal_700"
                android:textSize="@dimen/botones_vertical"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="="
                android:backgroundTint="@color/teal_700"
                android:id="@+id/boton_igual"
                android:textSize="@dimen/botones_vertical"
                android:layout_weight=".25" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>