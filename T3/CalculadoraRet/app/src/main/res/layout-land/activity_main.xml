<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_numeros"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:text="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_nomal"
            android:id="@+id/boton_uno"
            android:layout_weight="0.5"/>
        <Button
            android:layout_width="0dp"
            android:text="2"
            android:id="@+id/boton_dos"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_nomal"
            android:layout_weight="0.5"/>
        <Button
            android:layout_width="0dp"
            android:text="3"
            android:id="@+id/boton_tres"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_cientifico"
            android:layout_weight="0.5"/>
        <Button
            android:layout_width="0dp"
            android:text="4"
            android:id="@+id/boton_cuatro"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_cientifico"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>